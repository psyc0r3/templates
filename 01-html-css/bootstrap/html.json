{
  // Place your snippets for html here. Each snippet is defined under a snippet name and has a prefix, body and
  // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
  // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
  // same ids are connected.
  // Example:
  // "Print to console": {
  // 	"prefix": "log",
  // 	"body": [
  // 		"console.log('$1');",
  // 		"$2"
  // 	],
  // 	"description": "Log output to console"
  // }

  "bootstrap": {
    "prefix": "bootstrap",
    "body": [
      "<!doctype html>",
      "<html lang=\"${1|en-CH,de-CH,fr-CH|}\" data-bs-theme=\"${2|dark,light|}\">",
      "",
      "$BLOCK_COMMENT_START Created $CURRENT_YEAR-$CURRENT_MONTH-$CURRENT_DATE at $CURRENT_HOUR:$CURRENT_MINUTE:$CURRENT_SECOND $BLOCK_COMMENT_END",
      "",
      "<head>",
      "\t<meta charset=\"utf-8\">",
      "\t<meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">",
      "\t<title>$WORKSPACE_NAME</title>",
      "\t<link href=\"https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css\" rel=\"stylesheet\"",
      "\t\tintegrity=\"sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD\" crossorigin=\"anonymous\">",
      "</head>",
      "",
      "<body>",
      "\t<h1>Hello, world!</h1>",
      "\t<div> Have fun ðŸ˜† <br> with $TM_FILENAME </div>",
      "\t<script src=\"https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js\"",
      "\t\tintegrity=\"sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN\"",
      "\t\tcrossorigin=\"anonymous\"></script>",
      "</body>",
      "",
      "</html>"
    ],
    "description": "Creates a html file ready for use with bootstrap"
  }
}
